<h1>Add a new restaurant</h1>

<%= form_for @restaurant do |f| %>
<div>
  <%= f.label :name, "Enter a name" %>
  <%= f.text_field :name %>
</div>
<div>
  <%= f.label :address, "What is the address?" %>
  <%= f.text_field :address %>
</div>
<div>
  <%= f.label :phone_number, "What is the phone_number?" %>
  <%= f.text_field :phone_number %>
</div>
<div>
  <%= f.label :category, "What is the catgeory?" %>
  <%= f.text_field :category %>
</div>

  <%= f.submit %>
  <% end %>


